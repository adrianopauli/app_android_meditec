<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#bdbfe4" />
            <stroke android:width="1dp" android:color="#000" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#62bbe8" android:endColor="#62bbe8" android:angle="270.0" android:centerColor="#40ace4" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#cddcfb" android:endColor="#ced7f3" android:angle="270.0" />
            <padding android:left="5dp" android:top="5dp" android:bottom="5dp" />
        </shape>
    </item>
</selector>
